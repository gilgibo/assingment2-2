<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button21"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="standard" />

    <Button
        android:id="@+id/button22"
        android:gravity="center"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:text="1"
        android:layout_below="@+id/button23"
        android:layout_toLeftOf="@+id/button21"
        android:layout_toStartOf="@+id/button21" />

    <Button
        android:id="@+id/button23"
        android:gravity="center"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:text="2"
        android:layout_alignTop="@+id/button21"
        android:layout_toLeftOf="@+id/button21"
        android:layout_toStartOf="@+id/button21" />

    <Button
        android:id="@+id/button24"
        android:gravity="center"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:text="3"
        android:layout_alignBottom="@+id/button21"
        android:layout_alignLeft="@+id/button22"
        android:layout_alignStart="@+id/button22" />

    <Button
        android:id="@+id/button25"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="66dp"
        android:text="4"
        android:layout_below="@id/button21"
        android:layout_alignRight="@id/button21"
        />


    <Button
        android:id="@+id/button26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_toRightOf="@id/button21"
        android:layout_alignBottom="@id/button21"
        />

    <Button
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_above="@id/button21"
        android:layout_toRightOf="@id/button21"
        />

    <Button
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_above="@id/button21"
        android:layout_alignLeft="@id/button21"
        />


</RelativeLayout>